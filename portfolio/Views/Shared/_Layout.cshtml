<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Francisco Vlcek</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link href="~/lib/fontawesome-free-6.5.1-web/css/all.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-6.5.1-web/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/portfolio.styles.css" asp-append-version="true" />
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand"><img src="~/images&files/foto carnet fran_2.jpg" width="125px" class="img-thumbnail rounded-pill" /></a>
                <a class="navbar-brand navbar-principal" asp-area="" asp-controller="Home" asp-action="Index">Francisco Vlcek</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item active px-md-4">
                            <a class="nav-link" asp-controller="Home" asp-action="Education">Education</a>
                        </li>
                        <li class="nav-item active px-md-4">
                            <a class="nav-link" asp-controller="Home" asp-action="Employment">Employment</a>
                        </li>
                        <li class="nav-item active px-md-4">
                            <a class="nav-link" asp-controller="Home" asp-action="Certificates">Certificates</a>
                        </li>
                        <li class="nav-item active px-md-4">
                            <a class="nav-link" asp-controller="Home" asp-action="MyProjects">My Projects</a>
                        </li>
   
                        <li class="nav-item active px-md-4">
                            <a class="nav-link" href="https://drive.google.com/file/d/1QNEefYeS5eUNCxXPgQPR5ahG2jKZfG-u/view?usp=sharing" target="_blank">My Resume</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;Francisco Joaquín Vlcek - You can reach me through: 
            <a class="fa-brands fa-linkedin" href="https://www.linkedin.com/in/francisco-vlcek-2a7105218/" target="_blank"></a> |
            <a class="fa-brands fa-github text-reset" href="https://github.com/franvlcek" target="_blank"></a> |
            <i class="fa-solid fa-phone"></i> +54 911 3380-1616 |
            <i class="fa-solid fa-envelope"></i> franvlcek@gmail.com
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
